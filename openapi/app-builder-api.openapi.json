{
  "openapi": "3.1.0",
  "info": {
    "title": "App Builder API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://your-domain.com/api"
    }
  ],
  "paths": {
    "/file/batch": {
      "post": {
        "operationId": "createMultipleFiles",
        "summary": "Create multiple files in the project",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "projectId": { "type": "string" },
                  "files": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "path": { "type": "string" },
                        "content": { "type": "string" }
                      },
                      "required": ["path", "content"]
                    }
                  }
                },
                "required": ["projectId", "files"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Files created"
          }
        }
      }
    },
    "/deploy": {
      "post": {
        "operationId": "deployProject",
        "summary": "Deploy project to Vercel",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "projectId": { "type": "string" },
                  "vercelProjectName": { "type": "string" }
                },
                "required": ["projectId", "vercelProjectName"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Deployment triggered",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "deploymentUrl": { "type": "string" }
                  },
                  "required": ["deploymentUrl"]
                }
              }
            }
          }
        }
      }
    }
  }
}
